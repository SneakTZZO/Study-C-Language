# Study-C-Language
#include<stdio.h>
int input_arr(int* a, int* n) {
	srand(time(NULL));
	do {
		printf("n > 0: ");
		scanf("%d", n);
	} while (*n < 1);
	for (int i = 0; i < *n; i++)
	{
		a[i] = rand() % 50 - 25;
		//scanf("%d", &a[i]);
		printf("a[%d] = %d\n", i, a[i]);
	}
}
void average_odd_and_even(int* a, int n)
{
	int sumEven = 0, sumOdd = 0;
	int numEvenVal = 0, numOddVal = 0;
	for (int i = 0; i < n; i++)
	{
		if (a[i] % 2)
		{
			numOddVal++;
			sumOdd += a[i];
		}
		else
		{
			numEvenVal++;
			sumEven += a[i];
		}
	}
	printf("The average of the odd value = %.3f", 1.0 * sumOdd / numOddVal);
	printf("The average of the even value = %.3f", 1.0 * sumEven / numEvenVal);
}
int main()
{
	int n;
	int a[100];
	int x = 0;
	input_arr(a, &n);
	average_odd_and_even(a, n);
	return 0;
}
