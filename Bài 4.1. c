// nhap vao n > 0 va mot mang gom n phan tu. Tim gia tri lon nhat va nho nhat
#include<stdio.h>
#include<time.h>
#include<stdlib.h>
void intput_arr(int a[], int* n) {
	do {
		puts("n > 0: ");
		scanf("%d", n);
	} while (n < 1);
	srand(time(NULL));
	for (int i = 0; i < *n; i++)
	{
		a[i] = rand() % 100 - 50;
		printf("a[%d] = %d\n", i, a[i]);
	}
}
void find_min_max(int a[], int n, int min, int max) {
	for (int i = 1; i < n; i++)
	{
		if (a[i] < min) min = a[i];
		if (a[i] > max)	max = a[i];
	}
	// Compare max and min
	if (min - max)
	{
		printf("max = %d min = %d", max, min);
	}
	else puts("There_is_no_maximum_or_minimum_value");
}
int main(){
	int a[100];
	int n;
	intput_arr(a, &n);
	int min = a[0], max = a[0];
	find_min_max(a, n, min, max);
	return 0;
}
